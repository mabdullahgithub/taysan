        window.addEventListener('load', function() {
            // Force show the first step
            const firstStep = document.querySelector('.form-step[data-step="1"]');
            if (firstStep) {
                firstStep.style.display = 'block';
                firstStep.style.opacity = '1';
                firstStep.style.transform = 'translateX(0)';
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM Content Loaded - Starting form initialization');
            
            // Detect current step from DOM instead of hardcoding to 1
            const activeStep = document.querySelector('.form-step.active[data-step]');
            let currentStep = activeStep ? parseInt(activeStep.getAttribute('data-step')) : 1;
            const totalSteps = 2;
            console.log('Form initialized with', totalSteps, 'steps, current step:', currentStep);
            
            const steps = document.querySelectorAll('.form-step');
            const indicators = document.querySelectorAll('.step-indicator');
            const connectors = document.querySelectorAll('.step-connector');
            const nextBtn = document.getElementById('nextBtn');
            const prevBtn = document.getElementById('prevBtn');
            const submitBtn = document.getElementById('submitBtn');
            
            console.log('Found elements:', {
                steps: steps.length,
                indicators: indicators.length,
                nextBtn: !!nextBtn,
                prevBtn: !!prevBtn,
                submitBtn: !!submitBtn
            });

            // Check if essential elements exist
            if (!nextBtn) {
                console.error('Next button not found!');
                return;
            }
            
            if (steps.length === 0) {
                console.error('No form steps found!');
                return;
            }

            console.log('All essential elements found, proceeding with initialization');

            // Force show current step immediately (based on DOM state)
            console.log('About to call showStep with currentStep:', currentStep);
            showStep(currentStep);
            console.log('showStep call completed');

            // Password toggle functionality
            document.querySelectorAll('.password-toggle').forEach(toggle => {
                toggle.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-target');
                    const passwordInput = document.getElementById(targetId);
                    const icon = this.querySelector('i');
                    
                    if (passwordInput && icon) {
                        if (passwordInput.type === 'password') {
                            passwordInput.type = 'text';
                            icon.classList.remove('fa-eye');
                            icon.classList.add('fa-eye-slash');
                        } else {
                            passwordInput.type = 'password';
                            icon.classList.remove('fa-eye-slash');
                            icon.classList.add('fa-eye');
                        }
                    }
                });
            });

            // Step navigation
            function showStep(step) {
                console.log('Showing step:', step); // Debug log
                
                // Hide all steps
                steps.forEach(s => {
                    s.style.display = 'none';
                    s.classList.remove('active');
                });
                
                // Show current step
                const currentStepElement = document.querySelector(`[data-step="${step}"]`);
                if (currentStepElement) {
                    currentStepElement.style.display = 'block';
                    currentStepElement.style.opacity = '1';
                    currentStepElement.style.transform = 'translateX(0)';
                    currentStepElement.classList.add('active');
                }
                
                // Update indicators
                indicators.forEach((indicator, index) => {
                    const stepNumber = index + 1;
                    indicator.classList.remove('active', 'completed');
                    
                    if (stepNumber < step) {
                        indicator.classList.add('completed');
                    } else if (stepNumber === step) {
                        indicator.classList.add('active');
                    }
                });
                
                // Update connectors
                connectors.forEach((connector, index) => {
                    connector.classList.remove('completed');
                    if (index + 1 < step) {
                        connector.classList.add('completed');
                    }
                });
                
                // Update button visibility and text
                if (prevBtn) prevBtn.style.display = step === 1 ? 'none' : 'block';
                
                // Update next button based on step
                if (nextBtn) {
                    console.log('Updating next button for step:', step, 'totalSteps:', totalSteps);
                    if (step === totalSteps) {
                        // On last step, change to "Create Account" button
                        console.log('Setting button to "Create Account"');
                        nextBtn.innerHTML = '<i class="fas fa-user-plus me-2"></i>Create Account';
                        nextBtn.setAttribute('data-action', 'submit');
                    } else {
                        // On other steps, show "Next" button
                        console.log('Setting button to "Next"');
                        nextBtn.innerHTML = 'Next<i class="fas fa-arrow-right ms-2"></i>';
                        nextBtn.setAttribute('data-action', 'next');
                    }
                    console.log('Button innerHTML is now:', nextBtn.innerHTML);
                }
                
                // Hide the separate submit button since we're using the next button
                if (submitBtn) submitBtn.style.display = 'none';
                
                // Update next button state for new step
                setTimeout(updateNextButtonState, 100); // Small delay to ensure DOM is updated
            }            // Validate current step
            function validateStep(step) {
                console.log('Validating step:', step); // Debug log
                const currentStepElement = document.querySelector(`[data-step="${step}"]`);
                if (!currentStepElement) {
                    console.log('Step element not found for step:', step);
                    return false;
                }
                
                let isValid = true;

                // Step 1: Basic Information - validate name, email, password, confirm password
                if (step === 1) {
                    console.log('Validating Step 1: Basic Information');
                    const name = document.getElementById('name');
                    const email = document.getElementById('email');
                    const password = document.getElementById('password');
                    const passwordConfirmation = document.getElementById('password_confirmation');
                    const passwordMatchError = document.getElementById('password-match-error');
                    
                    if (!name || !email || !password || !passwordConfirmation) {
                        console.log('Missing required form elements for step 1');
                        return false;
                    }
                    
                    // Validate name
                    if (!name.value.trim()) {
                        name.style.borderColor = '#ff6b6b';
                        name.focus(); // Focus on invalid field
                        isValid = false;
                        console.log('Name validation failed');
                    } else {
                        name.style.borderColor = '#51cf66';
                    }
                    
                    // Validate email
                    if (!email.value.trim() || !email.value.includes('@')) {
                        email.style.borderColor = '#ff6b6b';
                        if (isValid) email.focus(); // Focus on first invalid field
                        isValid = false;
                        console.log('Email validation failed');
                    } else {
                        email.style.borderColor = '#51cf66';
                    }
                    
                    // Validate password
                    if (!password.value.trim() || password.value.length < 8) {
                        password.style.borderColor = '#ff6b6b';
                        if (isValid) password.focus(); // Focus on first invalid field
                        isValid = false;
                        console.log('Password validation failed');
                    } else {
                        password.style.borderColor = '#51cf66';
                    }
                    
                    // Validate password confirmation
                    if (!passwordConfirmation.value.trim()) {
                        passwordConfirmation.style.borderColor = '#ff6b6b';
                        if (isValid) passwordConfirmation.focus(); // Focus on first invalid field
                        isValid = false;
                        console.log('Password confirmation validation failed');
                    } else if (password.value !== passwordConfirmation.value) {
                        passwordConfirmation.style.borderColor = '#ff6b6b';
                        if (passwordMatchError) passwordMatchError.style.display = 'block';
                        if (isValid) passwordConfirmation.focus(); // Focus on first invalid field
                        isValid = false;
                        console.log('Password match validation failed');
                    } else {
                        passwordConfirmation.style.borderColor = '#51cf66';
                        if (passwordMatchError) passwordMatchError.style.display = 'none';
                    }
                }
                
                // Step 2: Contact Information - validate phone and city
                else if (step === 2) {
                    const phone = document.getElementById('phone');
                    const city = document.getElementById('city');
                    
                    // Phone is optional but if provided should be valid
                    if (phone.value.trim() && phone.value.trim().length < 7) {
                        phone.style.borderColor = '#ff6b6b';
                        isValid = false;
                    } else {
                        phone.style.borderColor = phone.value.trim() ? '#51cf66' : '#e8ecf0';
                    }
                    
                    // City is optional but if provided should be valid
                    if (city.value.trim() && city.value.trim().length < 2) {
                        city.style.borderColor = '#ff6b6b';
                        isValid = false;
                    } else {
                        city.style.borderColor = city.value.trim() ? '#51cf66' : '#e8ecf0';
                    }
                }
                
                // Step 3 and beyond: Optional fields validation
                else {
                    const currentInputs = currentStepElement.querySelectorAll('input');
                    currentInputs.forEach(input => {
                        if (input.hasAttribute('required')) {
                            if (!input.value.trim()) {
                                input.style.borderColor = '#ff6b6b';
                                isValid = false;
                            } else {
                                input.style.borderColor = '#51cf66';
                            }
                        } else {
                            // Optional fields - just reset to normal color if not empty
                            input.style.borderColor = input.value.trim() ? '#51cf66' : '#e8ecf0';
                        }
                    });
                }
                
                console.log('Step', step, 'validation result:', isValid); // Debug log
                return isValid;
            }

            // Password toggle functionality
            function togglePassword(fieldId) {
                const field = document.getElementById(fieldId);
                const icon = document.getElementById(fieldId + '-icon') || document.querySelector(`[onclick="togglePassword('${fieldId}')"] i`);
                
                if (field && icon) {
                    if (field.type === 'password') {
                        field.type = 'text';
                        icon.classList.remove('fa-eye');
                        icon.classList.add('fa-eye-slash');
                    } else {
                        field.type = 'password';
                        icon.classList.remove('fa-eye-slash');
                        icon.classList.add('fa-eye');
                    }
                }
            }

            // Make togglePassword globally available
            window.togglePassword = togglePassword;

            // Password strength checking function
            function checkPasswordStrength() {
                const password = document.getElementById('password').value;
                const strengthIndicator = document.getElementById('passwordStrength');
                const strengthBar = document.getElementById('strengthBar');
                const strengthText = document.getElementById('strengthText');
                
                // Show/hide strength indicator
                if (password.length > 0) {
                    strengthIndicator.style.display = 'block';
                } else {
                    strengthIndicator.style.display = 'none';
                    return;
                }

                // Check requirements
                const requirements = {
                    length: password.length >= 8,
                    uppercase: /[A-Z]/.test(password),
                    lowercase: /[a-z]/.test(password),
                    number: /[0-9]/.test(password),
                    special: /[^A-Za-z0-9]/.test(password)
                };

                // Update requirement indicators
                Object.keys(requirements).forEach(req => {
                    const element = document.getElementById(`req-${req}`);
                    if (requirements[req]) {
                        element.classList.add('met');
                        element.innerHTML = '<i class="fas fa-check text-success"></i> ' + element.textContent.split(' ').slice(1).join(' ');
                    } else {
                        element.classList.remove('met');
                        element.innerHTML = '<i class="fas fa-times text-danger"></i> ' + element.textContent.split(' ').slice(1).join(' ');
                    }
                });

                // Calculate strength
                const metRequirements = Object.values(requirements).filter(Boolean).length;
                let strength = 'weak';
                let strengthScore = 0;

                if (metRequirements >= 5) {
                    strength = 'strong';
                    strengthScore = 4;
                } else if (metRequirements >= 4) {
                    strength = 'good';
                    strengthScore = 3;
                } else if (metRequirements >= 3) {
                    strength = 'fair';
                    strengthScore = 2;
                } else if (metRequirements >= 1) {
                    strength = 'weak';
                    strengthScore = 1;
                }

                // Update visual indicators
                strengthBar.className = `strength-bar ${strength}`;
                strengthText.className = `strength-text small mt-1 ${strength}`;
                
                const strengthMessages = {
                    weak: 'Weak password',
                    fair: 'Fair password', 
                    good: 'Good password',
                    strong: 'Strong password'
                };
                
                strengthText.textContent = strengthMessages[strength];
            }

            // Make checkPasswordStrength globally available
            window.checkPasswordStrength = checkPasswordStrength;

            // Function to update next button state
            function updateNextButtonState() {
                const nextBtn = document.getElementById('nextBtn');
                if (!nextBtn) return;
                
                // Only validate if the button is visible (not on last step)
                if (nextBtn.style.display === 'none') return;
                
                const isValid = validateStep(currentStep);
                
                // Don't disable the button, just change visual appearance
                // This allows clicks for feedback
                if (isValid) {
                    nextBtn.style.opacity = '1';
                    nextBtn.style.cursor = 'pointer';
                    nextBtn.classList.remove('invalid-state');
                    nextBtn.classList.add('valid-state');
                } else {
                    nextBtn.style.opacity = '0.7';
                    nextBtn.style.cursor = 'pointer'; // Still allow clicks
                    nextBtn.classList.add('invalid-state');
                    nextBtn.classList.remove('valid-state');
                }
            }

            // Add input event listeners to all form fields for real-time validation
            function addRealTimeValidation() {
                // Name field validation
                const nameField = document.getElementById('name');
                if (nameField) {
                    nameField.addEventListener('input', function() {
                        if (this.value.trim().length > 0) {
                            this.style.borderColor = '#51cf66';
                        } else {
                            this.style.borderColor = '#e8ecf0';
                        }
                        updateNextButtonState();
                    });
                }
                
                // Email field validation
                const emailField = document.getElementById('email');
                if (emailField) {
                    emailField.addEventListener('input', function() {
                        if (this.value.trim().length > 0 && this.value.includes('@')) {
                            this.style.borderColor = '#51cf66';
                        } else if (this.value.trim().length > 0) {
                            this.style.borderColor = '#ff6b6b';
                        } else {
                            this.style.borderColor = '#e8ecf0';
                        }
                        updateNextButtonState();
                    });
                }
                
                // Add general listeners for other fields
                const allInputs = document.querySelectorAll('input');
                allInputs.forEach(input => {
                    if (input.id !== 'name' && input.id !== 'email' && input.id !== 'password' && input.id !== 'password_confirmation') {
                        input.addEventListener('input', updateNextButtonState);
                        input.addEventListener('blur', updateNextButtonState);
                    }
                });
            }

            // Initialize real-time validation
            addRealTimeValidation();
            
            // Set initial button state - allow clicking but show visual feedback
            const nextBtn = document.getElementById('nextBtn');
            if (nextBtn) {
                nextBtn.disabled = false; // Always allow clicks
                nextBtn.style.opacity = '0.7';
                nextBtn.style.cursor = 'pointer';
                
                // Test if button is clickable at all
                console.log('Next button found and configured');
                nextBtn.addEventListener('mouseenter', function() {
                    console.log('Mouse entered next button');
                });
            } else {
                console.error('Next button not found during initialization!');
            }
            
            // Update button state after a short delay to ensure DOM is ready
            setTimeout(updateNextButtonState, 200);

            // Real-time password confirmation validation
            const passwordField = document.getElementById('password');
            const passwordConfirmField = document.getElementById('password_confirmation');
            const passwordMatchError = document.getElementById('password-match-error');
            
            if (passwordField && passwordConfirmField && passwordMatchError) {
                function checkPasswordMatch() {
                    if (passwordConfirmField.value.trim() === '') {
                        passwordMatchError.style.display = 'none';
                        passwordConfirmField.style.borderColor = '#e8ecf0';
                        updateNextButtonState();
                        return;
                    }
                    
                    if (passwordField.value !== passwordConfirmField.value) {
                        passwordMatchError.style.display = 'block';
                        passwordConfirmField.style.borderColor = '#ff6b6b';
                    } else {
                        passwordMatchError.style.display = 'none';
                        passwordConfirmField.style.borderColor = '#51cf66';
                    }
                    updateNextButtonState();
                }
                
                passwordField.addEventListener('input', function() {
                    // Validate password length
                    if (this.value.length >= 8) {
                        this.style.borderColor = '#51cf66';
                    } else {
                        this.style.borderColor = this.value.length > 0 ? '#ff6b6b' : '#e8ecf0';
                    }
                    checkPasswordMatch();
                });
                
                passwordConfirmField.addEventListener('input', checkPasswordMatch);
            }

            // Simple test click handler first
            if (nextBtn) {
                // Remove any existing listeners and add a simple one
                nextBtn.onclick = function() {
                    alert('Next button clicked! Current step: ' + currentStep);
                    console.log('Simple click handler executed');
                };
                console.log('Simple click handler attached to next button');
            }

            // Original Next button click handler (will override the simple one)
            if (nextBtn) {
                console.log('Attaching click handler to next button');
                nextBtn.addEventListener('click', function(e) {
                    e.preventDefault(); // Prevent default form submission
                    alert('Button clicked! Current step: ' + currentStep); // Simple test
                    console.log('=== NEXT BUTTON CLICKED ===');
                    console.log('Current step:', currentStep);
                    console.log('Total steps:', totalSteps);
                    console.log('Event target:', e.target);
                    
                    const isValid = validateStep(currentStep);
                    console.log('Step validation result:', isValid);
                    
                    if (isValid) {
                        if (currentStep < totalSteps) {
                            console.log('Moving to next step:', currentStep + 1);
                            currentStep++;
                            showStep(currentStep);
                        } else if (currentStep === totalSteps) {
                            // On the last step, submit the form
                            console.log('Submitting form from step:', currentStep);
                            const form = document.getElementById('registerForm');
                            if (form) {
                                form.submit();
                            }
                        }
                    } else {
                        console.log('Validation failed for step:', currentStep);
                        
                        // Show error message
                        showValidationError(currentStep);
                        
                        // Add a shake animation to indicate error
                        this.style.animation = 'shake 0.5s';
                        setTimeout(() => {
                            this.style.animation = '';
                        }, 500);
                        
                        // Force validation to show visual feedback
                        validateStep(currentStep);
                    }
                });
            }

            // Show validation error message
            function showValidationError(step) {
                let message = '';
                if (step === 1) {
                    message = 'Please fill in all required fields: Name, Email, Password (8+ characters), and confirm your password.';
                } else if (step === 2) {
                    message = 'Please check your contact information.';
                } else {
                    message = 'Please check the current step fields.';
                }
                
                // Create or update error message
                let errorDiv = document.getElementById('step-error-message');
                if (!errorDiv) {
                    errorDiv = document.createElement('div');
                    errorDiv.id = 'step-error-message';
                    errorDiv.style.cssText = `
                        background: #ff6b6b;
                        color: white;
                        padding: 10px 15px;
                        border-radius: 8px;
                        margin-top: 15px;
                        font-size: 0.85rem;
                        display: none;
                    `;
                    const btnNav = document.querySelector('.btn-navigation');
                    if (btnNav) {
                        btnNav.parentNode.insertBefore(errorDiv, btnNav);
                    }
                }
                
                errorDiv.textContent = message;
                errorDiv.style.display = 'block';
                
                // Hide after 5 seconds
                setTimeout(() => {
                    errorDiv.style.display = 'none';
                }, 5000);
            }

            // Previous button click
            if (prevBtn) {
                prevBtn.addEventListener('click', function() {
                    console.log('Previous button clicked, current step:', currentStep);
                    if (currentStep > 1) {
                        currentStep--;
                        console.log('Moving to previous step:', currentStep);
                        showStep(currentStep);
                    }
                });
            }

            // Form submission with loading state
            const form = document.getElementById('registerForm');
            if (form) {
                form.addEventListener('submit', function() {
                    if (validateStep(currentStep) && submitBtn) {
                        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Creating Account...';
                        submitBtn.disabled = true;
                        submitBtn.classList.add('loading');
                    }
                });
            }

            // Keyboard navigation
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    if (currentStep < totalSteps && validateStep(currentStep)) {
                        if (nextBtn) nextBtn.click();
                    } else if (currentStep === totalSteps) {
                        if (submitBtn) submitBtn.click();
                    }
                }
            });
        });
        
        // SIMPLE WORKING SCRIPT
        document.addEventListener('DOMContentLoaded', function() {
            console.log('=== SIMPLE WORKING SCRIPT LOADED ===');
            
            let currentStep = 1;
            const totalSteps = 2;
            
            // Detect actual current step from DOM
            const activeStep = document.querySelector('.form-step.active');
            if (activeStep) {
                currentStep = parseInt(activeStep.getAttribute('data-step')) || 1;
            }
            
            console.log('Starting with step:', currentStep);
            
            const nextBtn = document.getElementById('nextBtn');
            const prevBtn = document.getElementById('prevBtn');
            const form = document.getElementById('registerForm');
            
            if (!nextBtn) {
                console.error('Next button not found!');
                return;
            }
            
            // Update button text based on current step
            updateButtonText();
            
            // Add click handler
            nextBtn.onclick = function(e) {
                e.preventDefault();
                console.log('Button clicked! Current step:', currentStep);
                
                if (currentStep < totalSteps) {
                    // Move to next step
                    currentStep++;
                    showStep(currentStep);
                    updateButtonText();
                } else {
                    // Submit form
                    console.log('Submitting form...');
                    if (form) {
                        form.submit();
                    }
                }
            };
            
            // Previous button handler
            if (prevBtn) {
                prevBtn.onclick = function(e) {
                    e.preventDefault();
                    if (currentStep > 1) {
                        currentStep--;
                        showStep(currentStep);
                        updateButtonText();
                    }
                };
            }
            
            function updateButtonText() {
                if (currentStep === totalSteps) {
                    nextBtn.innerHTML = '<i class="fas fa-user-plus me-2"></i>Create Account';
                } else {
                    nextBtn.innerHTML = 'Next<i class="fas fa-arrow-right ms-2"></i>';
                }
                console.log('Button text updated for step', currentStep, ':', nextBtn.innerHTML);
            }
            
            function showStep(step) {
                console.log('Showing step:', step);
                
                // Hide all steps
                document.querySelectorAll('.form-step').forEach(function(stepEl) {
                    stepEl.style.display = 'none';
                    stepEl.classList.remove('active');
                });
                
                // Show target step
                const targetStep = document.querySelector('[data-step="' + step + '"]');
                if (targetStep) {
                    targetStep.style.display = 'block';
                    targetStep.classList.add('active');
                }
                
                // Update indicators
                document.querySelectorAll('.step-indicator').forEach(function(indicator, index) {
                    indicator.classList.remove('active', 'completed');
                    const stepNum = index + 1;
                    if (stepNum < step) {
                        indicator.classList.add('completed');
                    } else if (stepNum === step) {
                        indicator.classList.add('active');
                    }
                });
                
                // Update button visibility
                if (prevBtn) {
                    prevBtn.style.display = step === 1 ? 'none' : 'block';
                }
            }
        });
    </script>
